# QCM Medical Extraction System - Environment Variables Template
# =============================================================
# Copiez ce fichier vers .env et remplissez avec vos vraies valeurs

# Mistral AI Configuration
# ------------------------
# Obtenez votre clé API sur https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Supabase Configuration  
# ----------------------
# Trouvez ces valeurs dans votre dashboard Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_service_role_key_here

# Optional: Database Configuration
# --------------------------------
# Si vous utilisez une base de données différente
DATABASE_URL=postgresql://user:password@localhost:5432/qcm_db

# Optional: API Rate Limiting
# ---------------------------
# Ajustez selon vos limites API
MISTRAL_RATE_LIMIT_DELAY=2
MAX_RETRIES=3

# Optional: File Processing
# -------------------------
# Configuration pour le traitement des fichiers
TEMP_DIR=qcm_extraction/temp
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=pdf

# Optional: Logging
# -----------------
LOG_LEVEL=INFO
LOG_FILE=logs/qcm_extraction.log

# Optional: Performance
# ---------------------
# Paramètres de performance
CHUNK_SIZE=30000
CHUNK_OVERLAP=5000
BATCH_SIZE=10

# Development Settings
# --------------------
# Uniquement pour le développement
DEBUG=False
VERBOSE_LOGGING=False 